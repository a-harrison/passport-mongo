<html>
  <head>
    <% include header %>
  </head>
  <body>
    <div class="container">
      <div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4">
	  <h1 class="tex-tcenter login-title">Sign in to our Passport app</h1>
	  <div class="account-wall">
	    <img src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" class="profile-img">
	    <form action="/login" method="POST" class="form-signin">
	      <input type="text" name="username" placeholder="Email" class="form-control" required autofocus >
	      <input type="password" name="password" placeholder="Password" class="form-control" required >
	      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
	      <span class="clearfix" />
	    </form>
	  </div>
	  <a href="/signup" class="text-center new-account">Create a New Account</a>
	  <div id="message"></div>
	</div>
      </div>
    </div>
  </body>
</html>
