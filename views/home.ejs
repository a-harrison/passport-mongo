<html>
  <head>
    <% include header %>
  </head>
  <body>
    <div class="container">
      <div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4">
	  <!-- User  -->
	  <h1 class="text-center login-title"> Welcome <%= user.firstName %>. Check your details below:
	    <div class="signup-wall">
	      <ul class="user-details">
		<table>
		  <tr><td class="table-label">Username:</td><td class="table-detail"><%= user.username %></td></tr>
		  <tr><td class="table-label">Email:</td><td class="table-detail"><%= user.email %></td></tr>
		  <tr><td class="table-label">First Name:</td><td class="table-detail"><%= user.firstName %></td></tr>
		  <tr><td class="table-label">Last Name:</td><td class="table-detail"><%= user.lastName %></td></tr>
		</table>
	      </ul>
	    </div>
	    <a href="/signout" class="text-center new-account">Sign Out</a>
	  </h1>
	</div>
      </div>
    </div>
  </body>
</html>
